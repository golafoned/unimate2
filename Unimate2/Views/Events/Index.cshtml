@model IEnumerable<UniMate2.Models.Domain.Event>
@{
    ViewData["Title"] = "Events";
    // Determine the current sort order from the query string, defaulting to ascending
    var currentOrder = Context.Request.Query["order"].ToString();
    if (string.IsNullOrEmpty(currentOrder))
    {
        currentOrder = "asc";
    }
    // Toggle the order for our button
    var toggleOrder = currentOrder.Equals("asc", StringComparison.OrdinalIgnoreCase) ? "desc" : "asc";
    var searchTerm = ViewBag.SearchTerm as string ?? "";
}

<div class="container mt-4">
    <h1>Events</h1>
    
    <div class="row mb-3">
        <div class="col-md-6">
            <form method="get" action="@Url.Action("Index", "Events")" class="d-flex">
                <input type="hidden" name="order" value="@currentOrder" />
                <input type="text" name="searchTerm" class="form-control me-2" placeholder="Search events..." value="@searchTerm" />
                <button type="submit" class="btn btn-outline-primary">Search</button>
            </form>
        </div>
        <div class="col-md-6 text-end">
            <a class="btn btn-primary me-2" href="@Url.Action("Index", "Events", new { order = toggleOrder, searchTerm })">
                Order: @toggleOrder.ToUpperInvariant()
            </a>
            <a class="btn btn-success" href="@Url.Action("Create", "Events")">Add Event</a>
        </div>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Location</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var evt in Model)
                {
                    <tr>
                        <td>@evt.Title</td>
                        <td>@evt.Description</td>
                        <td>@evt.StartDate.ToString("g")</td>
                        <td>@evt.EndDate.ToString("g")</td>
                        <td>@evt.Location</td>
                        <td>
                            <form asp-action="Delete" asp-route-id="@evt.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this event?');">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">No events available.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
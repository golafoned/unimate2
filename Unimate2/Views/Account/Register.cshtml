@model UniMate2.Models.ViewModels.RegisterModel

@{
    ViewData["Title"] = "Sign Up";
}

<div class="w-full max-w-md mx-auto bg-white rounded-xl shadow-xl p-6 md:p-8 border border-gray-100">
    <h1 class="text-2xl md:text-3xl font-bold text-center text-gray-800 mb-2">Create Account</h1>
    <p class="text-center text-gray-500 mb-8">Join UniMate2 to meet new friends.</p>
    
    <form id="register-form" asp-controller="Account" asp-action="Register" method="post">
        <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-4 p-3 bg-red-50 rounded-lg" role="alert"></div>
        
        <div class="mb-6">
            <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
            <input asp-for="Email" type="email" required class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 py-2 px-3" placeholder="you@example.com">
            <span asp-validation-for="Email" class="text-xs text-red-500"></span>
        </div>
        
        <div class="mb-6">
            <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
            <input asp-for="Password" type="password" required class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 py-2 px-3" 
                   placeholder="Minimum 6 characters">
            <span asp-validation-for="Password" class="text-xs text-red-500"></span>
        </div>
        
        <div class="mb-8">
            <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-1">Confirm Password</label>
            <input asp-for="ConfirmPassword" type="password" required class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 py-2 px-3">
            <span asp-validation-for="ConfirmPassword" class="text-xs text-red-500"></span>
        </div>
        
        <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-4 rounded-lg transition duration-200 shadow-md mb-6">
            Create Account
        </button>
        
        <div class="text-center">
            <p class="text-sm text-gray-600">
                Already have an account? 
                <a asp-action="Login" class="text-blue-600 hover:text-blue-800 font-medium">Sign In</a>
            </p>
        </div>
    </form>
</div>

<div class="w-full max-w-md mx-auto mt-12 text-center">
    <p class="text-sm text-gray-500 mb-4">Or sign up using</p>
    <div class="flex justify-center space-x-4">
        <button class="flex items-center justify-center px-4 py-2 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 transition">
            <img src="https://www.svgrepo.com/show/475656/google-color.svg" class="h-5 w-5 mr-2" alt="Google logo">
            Google
        </button>
        <button class="flex items-center justify-center px-4 py-2 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 transition">
            <img src="https://www.svgrepo.com/show/475647/facebook-color.svg" class="h-5 w-5 mr-2" alt="Facebook logo">
            Facebook
        </button>
    </div>
</div>
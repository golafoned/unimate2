@using UniMate2.Models.Enums
@model IEnumerable<UniMate2.Models.Domain.FriendRequest>

@{
    ViewData["Title"] = "Friend Requests";
}

<h1>Friend Requests</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Sender ID</th>
            <th>Receiver ID</th>
            <th>Status</th>
            <th>Sent At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>@item.SenderId</td>
                    <td>@item.ReceiverId</td>
                    <td>@item.Status</td>
                    <td>@item.SentAt.ToShortDateString()</td>
                    <td>
                        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
        }
    </tbody>
</table>

@model List<UniMate2.Models.Domain.User>

@{
    ViewData["Title"] = "My Friends";
}

<div class="container mt-4">
    <h2 class="mb-4">My Friends</h2>
    
    @if (TempData["FriendSuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["FriendSuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (TempData["FriendErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["FriendErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var friend in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">@friend.FirstName @friend.LastName</h5>
                            <p class="card-text">Email: @friend.Email</p>
                            <div class="d-flex justify-content-between">
                                <a href="@Url.Action("DetailsByEmail", "Users", new { email = friend.Email })" class="btn btn-primary">View Profile</a>
                                <form asp-action="DeleteFriend" asp-route-friendId="@friend.Id" method="post" onsubmit="return confirm('Are you sure you want to remove this friend?');">
                                    <button type="submit" class="btn btn-danger">Remove Friend</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            You don't have any friends yet.
        </div>
    }
</div>

@model IEnumerable<UniMate2.Models.DTO.UserDto>

@{
    ViewData["Title"] = "User Suggestions";
}

<div class="container mt-4">
    <h2 class="mb-4">User Suggestions</h2>
    
    <!-- Search form -->
    <form method="get" class="mb-4">
        <div class="input-group">
            <input type="text" name="email" class="form-control" placeholder="Search by email" value="@ViewData["CurrentSearch"]">
            <button type="submit" class="btn btn-primary">Search</button>
            @if (!string.IsNullOrEmpty((string)ViewData["CurrentSearch"]))
            {
                <a href="@Url.Action("Suggestions")" class="btn btn-outline-secondary">Clear</a>
            }
        </div>
    </form>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var user in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">@user.FirstName</h5>
                            <p class="card-text">Email: @user.Email</p>
                            <a href="@Url.Action("DetailsByEmail", "Users", new { email = user.Email })" class="btn btn-primary">View Profile</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            No suggestions available.
        </div>
    }
</div>